{
    "tasks": [
        {
            "label": "build",
            "type": "cppbuild",
			"command": "/usr/bin/g++",
            "args": [
                "-g",
                "-std=c++11",
                "${file}",
                "-o",
                "${workspaceFolder}/tasks/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "compiler: /usr/bin/g++"
        },
        {
            "label": "build & run",
            "type": "cppbuild",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "-std=c++11",
                "${file}",
                "-o",
                "${workspaceFolder}/tasks/${fileBasenameNoExtension}",
                "&&",
                "${workspaceFolder}/tasks/${fileBasenameNoExtension}",
                "<",
                "${workspaceFolder}/in",
                ">",
                "${workspaceFolder}/out"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group":{
                "kind": "build",
                "isDefault": true
            },
            "detail": "compiler: /usr/bin/g++"
        }
    ],
    "version": "2.0.0"
}